{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: clang++ build active file",
      "command": "/opt/homebrew/bin/g++-13",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-std=c++11",
        "-I${workspaceFolder}/cpp/inc/",
      ],
      "options": {
        "cwd": "${workspaceFolder}/cpp"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "detail": "Task generated by Debugger."
    },
    
    {
      "type": "cppbuild",
      "label": "C/C++: clang build active file",
      "command": "/opt/homebrew/bin/g++-13",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-std=c++11",
        "-I${workspaceFolder}/cpp/inc"
      ],
      "options": {
        "cwd": "${workspaceFolder}/cpp"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
      },
      "detail": "Task generated by Debugger."
    },

    { "type": "shell",
      "label": "MakeBuild",
      "command": "make", //its like writing in console make //btw you can others commands like clean make build etc
      "group": {
        "kind": "build",
        "isDefault": true
      },
    }

  ],
  "version": "2.0.0"
}